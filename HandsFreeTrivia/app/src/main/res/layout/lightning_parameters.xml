<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textBlackLight">

    <TextView
        android:id="@+id/parameters_light_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parameters_title"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/parameters__light_commands_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/parameters_start_time"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/parameters_select_time"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/textBlackDark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/speak_icon_35_33"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginLeft="20dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/parameters_start_times"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/thirty"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/comma"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/twenty"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/comma"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/ten"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/start_time_example"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/parameters_difficulty"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/parameters_start_time">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/parameters_select_difficulty"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/textBlackDark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/speak_icon_35_33"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginLeft="20dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/parameters_difficulty_level"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/easy"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/comma"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/Medium"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/comma"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    card_view:cardCornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    card_view:cardElevation="20dp"
                    card_view:cardBackgroundColor="@color/textBlackLight"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/hard"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/difficulty_level_example"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>




        </LinearLayout>

        <TextView
            android:id="@+id/parameters_select_category_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now, Select Categories to Start the Game"
            android:layout_below="@id/parameters_difficulty"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/textBlackDark"/>

        <LinearLayout
            android:id="@+id/categories_button"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/parameters_select_category_instructions"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speak_icon_35_33"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="20dp"
                card_view:cardElevation="20dp"
                card_view:cardBackgroundColor="@color/textBlackLight"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/parameters_go_to_catagoriesl"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginBottom="15dp"
        >

        <LinearLayout
            android:id="@+id/type_to_home_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speak_icon_35_33"
                android:layout_gravity="center"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="20dp"
                card_view:cardElevation="20dp"
                card_view:cardBackgroundColor="@color/textBlackLight"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/to_home"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/type_to_build_game_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speak_icon_35_33"
                android:layout_gravity="center"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="20dp"
                card_view:cardElevation="20dp"
                card_view:cardBackgroundColor="@color/textBlackLight"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to_game_type"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>